{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"version": 2,
	"regions": ["fra1"],
	"github": {
		"silent": true,
		"autoJobCancelation": true
	},
	"buildCommand": "hugo --minify",
	"outputDirectory": "public",
	"functions": {
		"api/**/*.php": {
			"runtime": "vercel-php@0.9.0",
			"excludeFiles": "{.next,*.cache,.node_cache,.cursor,.ansible,node_modules,.venv,.direnv,reports/2025/*,reports/2026/*,index/*.bmp,public/assets/fontawesome-free-7.1.0-web/}/**"
		}
	},
	"routes": [
		{ "src": "/api/honeypot/(.*)", "dest": "/api/login/$1" },
		{ "src": "/api/(.*)", "dest": "/api/$1" }
	],
	"env": {
		"NOW_PHP_FOO": "bar3"
	},
	"build": {
		"env": {
			"NOW_PHP_DEBUG": "1",
			"HUGO_VERSION": "0.140.2"
		}
	}
}
