{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"version": 2,
	"name": "nabla-site-apache-hugo",
	"regions": ["fra1"],
	"github": {
		"silent": true,
		"autoJobCancelation": true
	},
	"build": {
		"env": {
			"HUGO_VERSION": "0.140.2"
		}
	},
	"outputDirectory": "public",
	"framework": "hugo",
	"installCommand": "curl -sSL https://github.com/gohugoio/hugo/releases/download/v${HUGO_VERSION}/hugo_extended_${HUGO_VERSION}_Linux-64bit.tar.gz | tar -xz -C /tmp && mv /tmp/hugo /usr/local/bin/hugo && chmod +x /usr/local/bin/hugo",
	"buildCommand": "hugo --minify",
	"routes": [
		{
			"src": "/(.*)",
			"dest": "/$1"
		}
	]
}
